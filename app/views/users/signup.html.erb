<script type="text/javascript">
$(document).ready(function() {	
	$('#user_email').focus(function() {
		if($(this).val().match(/email/i)) {
			$(this).val('').removeClass('gray');
		}
	});
	$('#user_email').blur(function() {
		if($(this).val().length < 1) {
			$(this).val('email').addClass('gray');
		}
	});
	$('#user_dummy_password').focus(function() {
		$(this).hide();
		$('#user_password').show().focus();
	});
	$('#user_password').blur(function() {
		if($(this).val().length < 1) {
			$(this).hide();
			$('#user_dummy_password').show();
		}
	});
	$('#user_dummy_password_confirmation').focus(function() {
		$(this).hide();
		$('#user_password_confirmation').show().focus();
	});
	$('#user_password_confirmation').blur(function() {
		if($(this).val().length < 1) {
			$(this).hide();
			$('#user_dummy_password_confirmation').show();
		}
	});
});
</script>

<div id="signup">

<div class="page-title">Signup</div>

<div id="signup-thanks" class="users-success">Thanks for your donation! Here's your chance to signup!</div>

<% if flash[:error] %>
	<div id="signup-error" class="users-error">
		<ul>
		<% for error in flash[:error] %>
			<li><%= error %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<% form_for :user, :html => {:id => 'signup-form', :class => 'users-form'} do |f|%>
	<%= f.text_field :email, :value => 'email', :class => 'gray' %><br />
	<input id="user_dummy_password" class="gray" type="text" value="password" />
	<%= f.password_field :password, :style => 'display:none;' %><br />
	<input id="user_dummy_password_confirmation" class="gray" type="text" value="confirm password" />
	<%= f.password_field :password_confirmation, :style => 'display:none;' %>
	<%= submit_tag 'signup' %>
<% end %>

<div id="signup-alternatives">
	<div>Already have an account with Wodder? <a href="/users/signin">sign in &raquo;</a></div>
	<div>Just making a donation? Thanks! <a href="/">back to wods &raquo;</a></div>
</div>

</div>
